@page "/listPage"

<PageTitle>List Page</PageTitle>

<h1>List Page</h1>

@if (_cars.Any())
{
    <div>
        <button id="setcolorchromabtn" @onclick="SetAllColorsToRed">Set All Colors to Red</button>
        @if (_allColorsSet)
        {
            <p>colors done</p>
        }
        @if (_carsFilteredByBrand)
        {
        <p>filtering done</p>
        }
    </div>
<table class="table">
    <thead>
    <tr>
        <th>Model</th>
        <th><button id="togglebrandbtn" @onclick="() => ToggleSortByBrand()">Brand</button></th>
        <th>Color</th>
        <th>Fuel Type</th>
        <th>Release Year</th>
    </tr>
    </thead>
    <tbody>
    <Virtualize Items="@_cars">
        <tr>
            <td>@context.Model</td>
            <td>@context.Brand</td>
            <td>@context.Color</td>
            <td>@context.FuelType</td>
            <td>@context.ReleaseYear</td>
        </tr>
    </Virtualize>
    </tbody>
</table>
}