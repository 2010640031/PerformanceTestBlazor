@page "/fibonacciPage"

<h3>Find the 10000th Prime Number</h3>

<button id="fibonaccibtn" @onclick="FindPrime">Find 300000th Prime</button>

@if(primeFound) {
<p id="fibonacciresult">The 300000th prime number is: @nthPrime</p>
}

@code {
private bool primeFound = false;
private int nthPrime = 0;

private void FindPrime()
{
nthPrime = FindNthPrime(300000);
primeFound = true;
}

private int FindNthPrime(int n)
{
int count = 0;
int number = 2;

while (count < n)
{
if (IsPrime(number))
{
count++;
}

if (count < n)
{
number++;
}
}

return number;
}

private bool IsPrime(int number)
{
if (number <= 1) return false;
if (number == 2) return true;
if (number % 2 == 0) return false;

var boundary = (int)Math.Floor(Math.Sqrt(number));

for (int i = 3; i <= boundary; i += 2)
{
if (number % i == 0) return false;
}

return true;
}
}